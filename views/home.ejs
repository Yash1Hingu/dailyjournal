<%- include("paritals/header") -%>
<h1>Home</h1>
<p><%= homeContent %></p>
<% posts.forEach(function(blog){ %>

    <h1><%= blog.title %></h1>

    <% if(blog.content.length > 100) { %>
        <p><%= blog.content.substr(0,100) + "..." %>
            <a href="/posts/<%= blog._id %>">Read more</a>
        </p>
        
    <% } else { %>
    <p><%= blog.content %></p>
    <% } %>

<%});%>
<%- include("paritals/footer") -%>